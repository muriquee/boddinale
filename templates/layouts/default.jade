					a(href='mailto:g@muriquee.com') g@muriquee.com
				p Partners
					.col-sm-6.col-md-4
						img(src='../images/moviemento-logo.png')
					.col-sm-6.col-md-4 
						img(src='../images/11073809_772454926195890_7190610698609973984_n.png')
					.col-sm-6.col-md-4
						img(src='../images/logo.jpg')
				.row
				p media partners & Sponsors
					.col-sm-6.col-md-4
						img(src='../images/fluxfm_schwarz_mit_Kasten.jpg')
					.col-sm-6.col-md-4
						img(style='max-height:100px;width: auto;', src='../images/SHOTonRED_Small_transparent.png')
					.col-sm-6.col-md-4
