include ../mixins/static-intro
extends ../layouts/default

mixin jury-item(o)
  span(style="font-size: 16px;"): strong
    span(style="color: #993300;")= o.name + " - "
  each link, i in o.links
    a(href="#{link.href}" target="_blank")= link.link
    if i < o.links.length - 1
      span &#47;
  br

block intro
  +static-intro("Jury")

